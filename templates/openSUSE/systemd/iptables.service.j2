[Unit]
Description=IPv4 firewall with iptables
After=syslog.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/local/lib64/iptables/iptables.init start
ExecReload=/usr/local/lib64/iptables/iptables.init reload
ExecStop=/usr/local/lib64/iptables/iptables.init stop
Environment=BOOTUP=serial
Environment=CONSOLETYPE=serial
StandardOutput=syslog
StandardError=syslog

[Install]
WantedBy=basic.target
